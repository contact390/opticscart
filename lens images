    const popup = document.getElementById('popup');
    const popupTitle = document.getElementById('popupTitle');
    const popupPrice = document.getElementById('popupPrice');

    products.forEach(product => {
      const card = document.createElement('div');
      card.style = "background:white; border-radius:10px; width:200px; padding:15px; position:relative;";

      let bestsellerTag = product.bestseller
        ? `<div style='position:absolute; top:-10px; left:10px; background:orange; color:white; padding:3px 8px; font-size:12px; border-radius:4px;'>BESTSELLER</div>`
        : "";

